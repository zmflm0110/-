void randomEvent() {
    int event = rand() % 12; // 12ê°€ì§€ ëžœë¤ ì´ë²¤íŠ¸

    switch (event) {
        case 0: printf("\nðŸ”¥ ë°°íƒˆì´ ë„ˆë¬´ ì‹¬í•´ ëª¸ì—ì„œ í™”ì‚°ì´ í­ë°œí–ˆë‹¤!\nðŸ’€ ì„¸ê³„ê°€ ë¶ˆíƒ€ë²„ë¦¼â€¦ 'ì„¸ê³„ ë©¸ë§' ì—”ë”©!\n"); deathCount++; break;
        case 1: spaceAdventure(); break;
        case 2: becomePresident(); break;
        case 3: historicalEvent(); break;
        case 4: dragonQuest(); break;
        case 5: newDimensionEvent(); break;
        case 6: virusEscape(); break;
        case 7: magicalWorldEvent(); break;
        case 8: cityBattle(); break;
        case 9: realityShiftEvent(); break;
        case 10: pirateKing(); break;
        case 11: spaceAdventure(); break;
    }
    restartGame();
}

