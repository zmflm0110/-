void gachaReward(int dice) {
    gachaCount++;

    switch (dice) {
        case 1: printf("\nðŸ’€ 'ë°°íƒˆì´ ë„ˆë¬´ ì‹¬í•´ ë°°ê°€ í„°ì¡Œë‹¤!'\n"); deathCount++; break;
        case 2: richLife(); break;
        case 3: chooseYourDestiny(); break;
        case 4: megaEvent(); break;
        case 5: alternateUniverseEvent(); break;
        case 6: printf("\nðŸ† 'ì „ì„¤ì˜ í™”ìž¥ì‹¤ì„ ë°œê²¬í–ˆë‹¤!'\n"); endingCount++; break;
    }
    restartGame();
}

